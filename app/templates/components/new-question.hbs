{{#if addNewQuestionFormShowing}}
  <form>
    <div class='form-group'>
      <label for='author'>Your name: </label>
      {{input value=author id='author'}}
    </div>

    <div class='form-group'>
      <label for='content'>Question: </label>
      {{input value=content id='content'}}
    </div>

    <div class='form-group'>
      <label for='additionalNotes'>Additional Information: </label><br>
      {{textarea value=additionalNotes id='additionalNotes'}}
    </div>

    <button class='btn btn-primary' {{action 'addQuestion'}}>Post Question</button>
  </form>

  <button class='btn' {{action 'toggleFormShowing'}}>Hide Form</button>

{{else}}

  <button class='btn btn-info' {{action 'toggleFormShowing'}}>Create New Question Post</button>
{{/if}}
